
{
  "extends": ["next", "next/core-web-vitals", "eslint:recommended"],
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "semi": ["error", "never"],
    "no-var": "error",
    "indent": ["error", "tab"],
    "prefer-const": "error",
    "camelcase": "warn",
    "quotes": ["error", "double", { "allowTemplateLiterals": true }],
     "eqeqeq": ["error", "smart"]
  }
}